{% extends 'base.html.twig' %}

{% block title %}Questionnaires{% endblock %}
<h1>Générateur de QCM Intelligent</h1>

<form method="post">
    <textarea name="content" placeholder="Collez votre texte ici..." rows="6" class="form-control" required></textarea>

    <div class="mt-2">
        <label><input type="number" name="nombreQuestions" placeholder="Entrez le nombre de questions (par défaut 10)" checked></label>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Générer</button>
</form>

{% if qcm %}
    <div class="results mt-4">
        {% for item in qcm %}
            <div class="card mb-3 p-3">
                <p><strong>Q{{ loop.index }}: {{ item.question }}</strong></p>
                <ul>
                    {% for option in item.options %}
                        <li>{{ option }}</li>
                    {% endfor %}
                </ul>
                <p class="text-success">Réponse : {{ item.reponse }}</p>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
